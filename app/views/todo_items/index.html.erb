<p id="notice" class="text-success"><%= notice %></p>

<div class="container mt-5">
  <h1 class="mb-4">Todo Items</h1>

  <div class="d-flex justify-content-between mb-3">
    <%= form_with url: todo_items_path, method: :get, local: true, class: "d-flex w-50" do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search todos...", class: "form-control me-2" %>
      <%= submit_tag "Search", class: "btn btn-outline-primary" %>
    <% end %>

    <%= link_to "Filter", "#", class: "btn btn-outline-secondary" %>
  </div>

  <table class="table table-dark table-hover table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th class="text-center" colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @todo_items.each do |todo_item| %>
        <tr>
          <td><%= todo_item.title %></td>
          <td class="text-center"><%= link_to 'Show', todo_item, class: "btn btn-sm btn-success" %></td>
          <td class="text-center"><%= link_to 'Edit', edit_todo_item_path(todo_item), class: "btn btn-sm btn-warning" %></td>
          <td class="text-center">
            <%= button_to 'Done', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'New Todo Item', new_todo_item_path, class: "btn btn-primary" %>
  </div>
</div>
