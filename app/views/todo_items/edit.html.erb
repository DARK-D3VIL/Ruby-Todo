<h1>Editing Todo Item</h1>

<%= form_with(model: @todo_item, local: true) do |form| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo item from being saved:</h2>

      <ul>
        <% @todo_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date %>
    <%= form.datetime_select :due_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :priority %>
    <%= form.select :priority, ['Low', 'Medium', 'High'], {}, class: "form-select" %>
  </div>

  <%= form.submit "Update Todo", class: "btn btn-primary" %>
<% end %>

<br>

<%= link_to 'Show', @todo_item, class: "btn btn-secondary" %>
<%= link_to 'Back', todo_items_path, class: "btn btn-outline-secondary" %>
